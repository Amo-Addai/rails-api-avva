<%= render 'layouts/title', title: 'Sign Up' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :email %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-danger' %>
        </div>
        <p class="help is-danger">
          This field is required
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :firstname %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.text_field :firstname, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :lastname %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.text_field :lastname, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :password %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.password_field :password, class: 'input is-danger', autocomplete: "new-password" %>
        </div>
        <p class="help is-danger">
          This field is required
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= f.label :password_confirmation %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.password_field :password_confirmation, class: 'input is-danger', autocomplete: "new-password" %>
        </div>
        <p class="help is-danger">
          This field is required
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </p>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="field is-grouped">
          <div class="control">
            <%= f.submit "Sign up", class: 'button is-primary', data: { turbo: false } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-vertical">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
