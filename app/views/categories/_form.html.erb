<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :name %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :name, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :image_url %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :image_url, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :position %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.number_field :position, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field has-check is-horizontal">
    <div class="field-label">
      Hidden
    </div>
    <div class="field-body">
      <div class="field">
        <div class="field is-grouped-multiline is-grouped">
          <div class="control">
            <%= form.label :hidden, class: 'b-checkbox checkbox' do %>
              <%= form.check_box :hidden %>
              <span class="check is-primary"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :slug %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :slug, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :description %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_area :description, class: 'input' %>
        </div>
      </div>
    </div>
  </div>


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <%= form.label :subtitle %>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= form.text_field :subtitle, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="field is-grouped">
          <div class="control">
            <%= form.submit "Save", class: 'button is-primary', data: { turbo: false } %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
